{
  "compilerOptions": {
    "pretty": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
